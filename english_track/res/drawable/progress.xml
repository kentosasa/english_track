<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
  <item android:id="@android:id/background">  
    <shape>  
      <corners android:radius="5dip" />  
      <gradient  
        android:startColor="#ffeba0"  
        android:centerColor="#ffeba0"  
        android:centerY="0.3"  
        android:endColor="#ffeba0"  
        android:angle="270" />  
    </shape>  
  </item>  
  <item android:id="@android:id/progress">  
    <clip>  
      <shape>  
        <corners android:radius="5dip" />  
        <gradient  
          android:startColor="#ff614d"  
          android:centerColor="#ff614d"  
          android:centerY="0.3"  
          android:endColor="#ff614d"  
          android:angle="270"  
          />  
      </shape>  
    </clip>  
  </item>  
 </layer-list>  